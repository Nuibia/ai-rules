  },
  "dependencies": {
    "commander": "^12.1.0",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.1"
  },
  "files": [
    "dist",
    "templates"
  ]
}

